#!groovy
// Run docker build
properties([disableConcurrentBuilds()])

pipeline {
    agent any
    tools {
        terraform 'terraform'
    }
    stages {
       stage("terraform init") {
          steps {
              echo " ============== terraform init =================="
              dir ('.') {
                sh 'sudo /usr/bin/terraform init'
              }
          }
       }

       stage("terraform apply") {
          steps {
              echo " ============== terraform apply =================="
              dir ('.') {
                sh 'terraform apply --auto-approve'
              }
          }
       }
    }
}
